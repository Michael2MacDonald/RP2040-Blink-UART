{
  "version": "2.0.0",
  "type": "shell",
  "problemMatcher": "$gcc",
  "presentation": {
    "echo": true,
    "clear": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": false
  },
  
  "tasks": [
    {
      "label": "Make",
      "type": "shell",
      "command": "cmake --build build/ --config Debug --target RP2040-Blink-UART -- -j 4",
      "options": {
          "cwd": "${workspaceFolder}/"
      },
      "group": {
          "kind": "build",
          "isDefault": true
      }
    },
    {
      "label": "CMake",
      "type": "shell",
      "command": "cmake ../ --fresh",
      "options": {
          "cwd": "${workspaceFolder}/build"
      },
      "group": {
          "kind": "build",
          "isDefault": true
      }
    },
    {
      "label": "ELF2UF2",
      "type": "shell",
      "command": "../tools/elf2uf2 RP2040-Blink-UART RP2040-Blink-UART.uf2",
      "options": {
          "cwd": "${workspaceFolder}/bin"
      },
      "group": {
          "kind": "build",
          "isDefault": true
      }
    },
    {
      "label": "Build",
      "dependsOn": ["CMake", "Make", "ELF2UF2"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  

}