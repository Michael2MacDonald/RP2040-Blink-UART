{
  "tasks": [
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "${workspaceFolder}/tools/make.exe",
      "args": [
        "all",
        "-j",
        "-Otarget",
      ]
    },
    {
      "label": "Clean",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "${workspaceFolder}/tools/make.exe",
      "args": [
        "clean",
        // "-d"
      ]
    },
    {
      "label": "Rebuild",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOrder": "sequence",
      "dependsOn": ["Clean", "Build"]
    }
  ],
  
  "version": "2.0.0",
  "type": "shell",
  "problemMatcher": "$gcc",
  "presentation": {
    "echo": true,
    "clear": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": false
  }
}